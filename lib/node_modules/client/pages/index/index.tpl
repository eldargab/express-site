<% var a = {name: 'Румянцево', metro: 'Кожуховская', price: '750-1000', space: '10-1100', level: 'B'} %>

<ul class="thumbnails">
  @for (var i = 0; i < 5; i++) {
    <li class="span4">
      <div class="thumbnail advert">
        <a href="/advert/#a.name#">
          <h4 class="advert-header">#a.name#</h4>
          <div class="advert-body">
            <img src="http://placehold.it/90x90" alt="" />
            <ul class="unstyled">
              <li><b>м. #a.metro#</b></li>
              <li>#a.price# $/м<sup>2</sup>/год</li>
              <li>#a.space# м<sup>2</sup></li>
              <li>Класс #a.level#</li>
            </ul>
          </div>
        </a>
      </div>
    </li>
  @};
</ul>
