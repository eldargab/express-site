@@ body
<% var p = require('params').site %>

<!DOCTYPE html>
<html lang="#p.lang#">
  <head>
    <meta charset="utf-8">
    <title>#p.title#</title>
    <link href="/res/site.css" rel="stylesheet">
    <style type="text/css">
      body
      {
        padding-top: 60px;
      }
    </style>

    @function script (src) {
      <script src="/res/#=src#.js" type="text/javascript"></script>
    @}
    @script('jquery')
    @script('require')
    @script('package-register')

    <script type="text/javascript">
      require.baseUrl = '/res';
      require.launch('bootstrap');
    </script>
  </head>

  <body>
    @render('./topbar')
    <div class="container">
      <div id="page-container">
        <div>#=body#</div>
      </div>
      <footer>
      <p>&copy; #p.title# 2011</p>
      </footer>
    </div> <!-- /container -->
  </body>
</html>
